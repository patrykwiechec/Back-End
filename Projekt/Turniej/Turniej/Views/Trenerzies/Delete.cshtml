@model Turniej.Models.Trenerzy

@{
    ViewData["Title"] = "Usuń";
}
<script src="~/script.js"></script>
<h1>Usuń trenera z bazy</h1>

<h3>Jesteś pewny usunięcia tego trenera?</h3>
<div>
    <h4>Trenerzy</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ImieT)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ImieT)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NazwiskoT)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NazwiskoT)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IleMedaliT)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IleMedaliT)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdTrenera" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Wróć</a>
    </form>
</div>

<img class="sportimg" alt="Sport" src="~/sport.png" />
