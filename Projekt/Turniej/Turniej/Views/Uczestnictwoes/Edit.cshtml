@model Turniej.Models.Uczestnictwo

@{
    ViewData["Title"] = "Edytuj";
}

<h1>Edit</h1>

<h4>Uczestnictwo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdUczestnictwa" />
            <div class="form-group">
                <label asp-for="IdZawodnika" class="control-label"></label>
                <select asp-for="IdZawodnika" class="form-control" asp-items="ViewBag.IdZawodnika"></select>
                <span asp-validation-for="IdZawodnika" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdZawodow" class="control-label"></label>
                <select asp-for="IdZawodow" class="form-control" asp-items="ViewBag.IdZawodow"></select>
                <span asp-validation-for="IdZawodow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć</a>
</div>

<img class="sportimg" alt="Sport" src="~/sport.png" />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
