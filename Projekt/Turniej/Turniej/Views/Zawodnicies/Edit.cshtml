@model Turniej.Models.Zawodnicy

@{
    ViewData["Title"] = "Edytuj";
}
<script src="~/script.js"></script>
<h1>Edytuj</h1>

<h4>Zawodnicy</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdZawodnika" />
            <div class="form-group">
                <label asp-for="Imie" class="control-label"></label>
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nazwisko" class="control-label"></label>
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Kraj" class="control-label"></label>
                <input asp-for="Kraj" class="form-control" />
                <span asp-validation-for="Kraj" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IleMedaliT" class="control-label"></label>
                <input asp-for="IleMedaliT" class="form-control" />
                <span asp-validation-for="IleMedaliT" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTrenera" class="control-label"></label>
                <select asp-for="IdTrenera" class="form-control" asp-items="ViewBag.IdTrenera"></select>
                <span asp-validation-for="IdTrenera" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć</a>
</div>
<img class="sportimg" alt="Sport" src="~/sport.png" />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
