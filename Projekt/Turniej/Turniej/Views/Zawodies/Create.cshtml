@model Turniej.Models.Zawody

@{
    ViewData["Title"] = "Utwórz";
}
<script src="~/script.js"></script>
<h1>Utwórz</h1>

<h4>Zawody</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nazwa" class="control-label"></label>
                <input asp-for="Nazwa" class="form-control" />
                <span asp-validation-for="Nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lokalizacja" class="control-label"></label>
                <input asp-for="Lokalizacja" class="form-control" />
                <span asp-validation-for="Lokalizacja" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć</a>
</div>
<img class="sportimg" alt="Sport" src="~/sport.png" />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
